<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/cpuInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPU Usage: --"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/memoryInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memory Usage: --"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/diskInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disk Space: --"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/networkInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network Status: --"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/uptimeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System Uptime: --"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView> 